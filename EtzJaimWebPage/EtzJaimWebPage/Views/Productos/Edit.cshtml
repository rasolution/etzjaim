@model EtzJaimWebPage.Models.Producto
@{
    ViewBag.Title = "Editar";
}

<h2>Editar Producto</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <br />
            <label class="control-label col-md-2" for="pro_nombre">Numero del Producto</label>

            <div class="col-md-10">
                <input class="form-control text-box single-line" id="pro_id" name="pro_id" type="text" placeholder=@Model.pro_id readonly>
            </div>

            <label class="control-label col-md-2" for="pro_nombre">Nombre del Producto</label>

            <div class="col-md-10">
                <input class="form-control text-box single-line" id="pro_precio" name="pro_precio" type="text"  placeholder=@Model.pro_nombre>
            </div>

            <br />
            <br />

            <label class="control-label col-md-2" for="pro_precio">Precio</label>

            <div class="col-md-10">
                <input class="form-control text-box single-line" id="pro_precio" name="pro_precio" type="text"  placeholder=@Model.pro_precio>
            </div> 

            <br />
            <br />

            <label class="control-label col-md-2" for="pro_estado">Estado</label>

            <div class="col-md-10">
                <select class="form-control text-box single-line" id="pro_estado" name="pro_estado" value=@Model.pro_estado>
                    <option value="0">Activo</option>
                    <option value="1">Desactivado</option>
                </select>
            </div>
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Edit" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
<a href="~/Productos"><button value="Index" class="btn btn-default">Volver</button></a>
