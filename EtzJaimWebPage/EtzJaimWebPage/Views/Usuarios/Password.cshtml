@model EtzJaimWebPage.Models.Usuario
@{
    ViewBag.Title = "Password";
}

<h2>Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <br />

            <label class="control-label col-md-2" for="password">password</label>

            <div class="col-md-10">
                <input class="form-control text-box single-line" id="password" name="password" type="password" value="">
            </div>

            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Password" class="btn btn-default" />
                <a href="~/Usuarios"><button value="Index" class="btn btn-default">Volver</button></a>
            </div>
        </div>
    </div>
}